{% extends "./base.html.twig" %}

{% block body %}
    <div class="w-4/5 m-auto text-center">
        <div class="py-12 border-b border-gray-200">
            <h1 class="text-6xl pt-12 pb-8">
             Library
            </h1>

            <span class="font-light text-gray-500 italic">
            Created By {{app.user.getName()}}      
            </span>
        </div>
    </div>

   
        
    <div class="md:grid lg:grid-cols-3 gap-20 w-4/5 mx-auto py-15 ">
      
        {% for book in app.user.getBooks() %}
            <div class="text-center pt-8 pb-4">
                <img
                    src="{{ book.imagePath }}"
                    alt=""
                    class="shadow-xl rounded-md"
                />

                <h2 class="text-gray-700 font-bold text-3xl py-2">
                    {{ book.title }}
                </h2>

                <span class="text-gray-500">
                    By <span class="italic text-sm text-gray-800">OSK | 2023
                </span>

                <p class="text-base text-gray-700 pt-4 pb-10 leading-8 font-light">
                    {{ book.description }}
                </p>       
                <a href="/books/remove/{{book.id}}" class="uppercase border border-gray-500 text-gray-600 text-lg py-4 px-12 rounded transition transition-all hover:bg-red-800 hover:text-white">
                   Remove From Library
                </a>
            </div>
        {% endfor %}
         
    </div>
{% endblock %}