{% extends "./base.html.twig" %}

{% block body %}

    <div class="sm:w-3/5 w-4/5 mx-auto">
        <h1 class="pt-20 sm:text-5xl md:text-7xl text-4xl font-bold text-center">
            {{ book.title }}
        </h1>

        <div class="py-10 text-center">
            <div class="inline-block sm:pt-1">
                <h2 class="font-bold">
                    Created by: OSK
                </h2>

                <p class="text-sm text-gray-600">
                    2023
                </p>
            </div>
        </div>

        <img
            src="{{ book.imagePath }}"
            class="rounded-xl w-full shadow-xl"
            alt="Icon of Code With Dary"
        />

        <p class="text-xl py-6">
            {{ book.description }}
        </p>



        {% if is_granted('ROLE_ADMIN') %}
  <a href="/books/edit/ {{book.id}}"
        class="bg-green-500 font-bold py-2 px-4 rounded transition-all
        hover:bg-green-300">
        Edit Book
        </a>
{% endif %}
   {% if is_granted('ROLE_ADMIN') %}
 <a href="/books/delete/ {{book.id}}"
        class="bg-red-500 font-bold py-2 px-4 ml-6 rounded transition-all
        hover:bg-red-300">
        Delete Book
        </a>
{% endif %}



 
           {% if is_granted('ROLE_USER') %}
    <a href="/books/read/ {{book.id}}"
        class="bg-green-500 font-bold py-2 px-4 ml-6 rounded transition-all
        hover:bg-green-300">
        I read
        </a> 
{% endif %}
                 {% if is_granted('ROLE_USER') %}
      <a href="/books/willRead/ {{book.id}}"
        class="bg-green-500 font-bold py-2 px-4 ml-6 rounded transition-all
        hover:bg-green-300">
        I will read
        </a>
{% endif %}
{% if is_granted('ROLE_USER') %}
 <a href="/books/remove/ {{book.id}}"
        class="bg-red-500 font-bold py-2 px-4 ml-6 rounded transition-all
        hover:bg-red-300">
        Remove From Library
        </a>
{% endif %}
       
   
      

        
    </div>
{% endblock %}